<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20" prefHeight="600" prefWidth="400" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuPrincipalController" style="-fx-background-color: #ecf0f1; -fx-padding: 30;">
    <children>
        <Label text="Menú Principal" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        <Button fx:id="btnGestionSalas" text="Gestión de Salas" prefWidth="300" prefHeight="40" style="-fx-font-size: 16px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" onAction="#abrirGestionSalas"/>
        <Button fx:id="btnGestionEquipos" text="Gestión de Equipos Audiovisuales" prefWidth="300" prefHeight="40" style="-fx-font-size: 16px; -fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 5;" onAction="#abrirGestionEquipos"/>
        <Button fx:id="btnGestionPrestamos" text="Gestión de Préstamos" prefWidth="300" prefHeight="40" style="-fx-font-size: 16px; -fx-background-color: #1abc9c; -fx-text-fill: white; -fx-background-radius: 5;" onAction="#abrirGestionPrestamos"/>
        <Button fx:id="btnGestionUsuarios" text="Gestión de Usuarios" prefWidth="300" prefHeight="40" style="-fx-font-size: 16px; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" onAction="#abrirGestionUsuarios"/>
        <Button fx:id="btnGestionSanciones" text="Gestión de Sanciones" prefWidth="300" prefHeight="40" style="-fx-font-size: 16px; -fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 5;" onAction="#abrirGestionSanciones"/>
        <Button fx:id="btnGestionEvaluaciones" text="Gestión de Evaluaciones" prefWidth="300" prefHeight="40" style="-fx-font-size: 16px; -fx-background-color: #8e44ad; -fx-text-fill: white; -fx-background-radius: 5;" onAction="#abrirGestionEvaluaciones"/>
        <Button fx:id="btnGestionMantenimiento" text="Gestión de Mantenimiento" prefWidth="300" prefHeight="40" style="-fx-font-size: 16px; -fx-background-color: #d35400; -fx-text-fill: white; -fx-background-radius: 5;" onAction="#abrirGestionMantenimiento"/>
    </children>
</VBox>
